<?xml version="1.0" encoding="UTF-8"?>
<addons>
  <addon id="plugin.video.kodivertido-X"
       name="KODIvertiDO X"
       version="1.0"
       provider-name="Grupo Kodidivertido">
  <requires>
	  <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.requests" />
    <import addon="plugin.video.youtube" optional="true" />
    <import addon="script.module.resolveurl" />
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <summary>kodivertido</summary>
    <description>kodivertido</description>
	  <disclaimer>kodivertido</disclaimer>
    <platform>all</platform>
	<assets>
    <icon>icon.gif</icon>
    <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>

<addon id="repository.kodivertidoX" name="[B][COLOR lime]KODIvertiDO[/COLOR][COLOR blue] Repo[/COLOR][/B]" version="1.0" provider-name="Mendelux">
	<extension point="xbmc.addon.repository" name="KODIvertiDO official Repo">
		<info compressed="false">https://raw.githubusercontent.com/mendelux/repositorioKodivertido/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/mendelux/repositorioKodivertido/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/mendelux/repositorioKodivertido/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>KODIvertiDO official Repo</summary>
   		<description lang="en">Instala el Addon KODIvertiDO X</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
